<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center_horizontal">
        <Button
                android:text="@string/choose_app_button_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chooseApplication"
                android:width="200dp"
                android:height="80dp"
                android:layout_margin="5dp"
                android:textSize="17sp"/>
        <Button
                android:text="@string/clear_dns_button_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clearDnsButton"
                android:width="200dp"
                android:height="80dp"
                android:layout_margin="5dp"
                android:textSize="17sp"/>
        <Button
                android:text="@string/start_button_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startButton"
                android:width="200dp"
                android:height="80dp"
                android:layout_margin="5dp"
                android:textSize="17sp"/>
        <Button
                android:text="@string/stop_button_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stopButton"
                android:width="200dp"
                android:height="80dp"
                android:layout_margin="5dp"
                android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>
